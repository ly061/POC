pipeline {
    agent any
    triggers {
        cron('H 13 * * *')
    }
    stages {
        stage('Testing') {
            steps {
                echo 'Start Testing'
                bat '''
                    pip install -r requirements.txt
                    allure --version
                    pytest -n 1 -m test --html=report/report-${BUILD_NUMBER}.html
                    exit %ERRORLEVEL%
                    deactivate
                '''
            }
        }
    }
}
